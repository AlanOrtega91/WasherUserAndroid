<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alan.washer.washeruser.CreateAccountPayment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <EditText
            style="@style/edit_text"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/cardNumber"
            android:inputType="number"
            android:hint="@string/hint_cardnumber"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <Spinner
                style="@style/edit_text"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/cardExpirationMonth"
                android:spinnerMode="dropdown"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_marginStart="5dp" />

            <Spinner
                style="@style/edit_text"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/cardExpirationYear"
                android:spinnerMode="dropdown"
                android:layout_toEndOf="@id/cardExpirationMonth"
                android:gravity="center"
                android:layout_marginStart="15dp" />

            <EditText
                style="@style/edit_text"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/cvv"
                android:inputType="number"
                android:hint="@string/hint_cardCVV"
                android:textColor="@android:color/darker_gray"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:maxLength="4"
                android:layout_marginEnd="5dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>