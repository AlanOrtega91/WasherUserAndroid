<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BillingActivity" android:background="@drawable/background">

    <TextView
        style="@style/input_text"
        android:layout_width="fill_parent"
        android:text="@string/billing_name"
        android:id="@+id/billingName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        style="@style/input_text"
        android:layout_width="fill_parent"
        android:text="@string/rfc"
        android:id="@+id/billingRFC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        style="@style/input_text"
        android:layout_width="fill_parent"
        android:text="@string/address"
        android:id="@+id/billingAddress"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        style="@style/aux_text_style"
        android:layout_width="fill_parent"
        android:text="@string/change_data"
        android:id="@+id/textView9"
        android:layout_marginTop="20dp"
        android:onClick="onClickChangeData" />
</LinearLayout>
