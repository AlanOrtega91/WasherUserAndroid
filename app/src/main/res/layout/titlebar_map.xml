<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    style="@style/titlebar_menu"
    tools:context="com.alan.washer.washeruser.NavigationDrawer"
    android:background="@drawable/bar_up">

    <ImageView
        style="@style/titlebar_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:contentDescription="@string/image_description"
        android:id="@+id/menuImage"
        android:src="@drawable/menu_icon"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:onClick="onClickMenu"/>

    <TextView
        style="@style/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_display"
        android:id="@+id/menuMapTitle"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold" />
</RelativeLayout>