<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SummaryActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/date"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/price"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_description"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">


            <ImageView
                android:contentDescription="@string/image_description"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cleanerImage"
                android:layout_marginEnd="10dp"
                android:src="@drawable/default_image" />

            <ImageView
                android:contentDescription="@string/image_description"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/locationImage"
                android:src="@drawable/default_image" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evaluation_description"
            android:id="@+id/textView11"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/oneStar"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/rating_empty"
                    android:onClick="onClickStar"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/twoStar"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/rating_empty"
                    android:onClick="onClickStar"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/threeStar"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/rating_empty"
                    android:onClick="onClickStar"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/fourStar"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/rating_empty"
                    android:onClick="onClickStar"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/fiveStar"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/rating_empty"
                    android:onClick="onClickStar"/>
            </LinearLayout>

            <Button
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:text="@string/send"
                android:id="@+id/button4"
                android:onClick="trySendReview"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
